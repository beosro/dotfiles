# vim: set filetype=bash:
#
# check if session exists
tmux has-session -t test
if [ $? != 0 ]
then

# if session does not exist create it
tmux -2 new-session -s test -n base -d

# Create two full-width, stacked windows
# make the top one 80% and the bottom 20%
tmux split-window -v -p 20 -t test:1

# Split the top window 75% / 25%
tmux split-window -h -p 25 -t test:1.1

# Split the new 25% window
tmux split-window -v -p 80 -t test:1.2

# end if statement and attach mytmux if it existed
fi
tmux attach -t test
