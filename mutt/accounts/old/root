# Account Settings ------------------------------

set from      = "root@zanshin.net"
set sendmail  = "/usr/bin/msmtp -a root"

# Default inbox.
set spoolfile = "+root/INBOX"

# Other special folders.
set mbox      = "+root/Archive"
set postponed = "+root/Drafts"
set record    = "+root/Sent Messages"

color status yellow default
set my_acct   = "root"

unmailboxes *
mailboxes =root/INBOX =root/Archive =root/Drafts =root/Sent\ Messages
