# Source account passwords
source "gpg -d ~/.mutt/passwords/root.gpg |"

# Account settings
set imap_user        = "root_zanshin"
set header_cache     = "~/.mutt/cache/headers"
set message_cachedir = "~/.mutt/cache/bodies"
set folder           = "~/.mail/root"
set from             = "root@zanshin.net"
set smtp_url         = "smtp://root_zanshin@smtp.webfaction.com:587"
set spoolfile        = "imaps://root_zanshin@mail.webfaction.com:993/INBOX"
set postponed        = "+Drafts"
set record           = "+Sent\ Messages"
set realname         = "Mark Nichols"
set signature        = "~/.mutt/accounts/root-sig"

set from             = "root"

set imap_keepalive=60
set imap_passive=no
set imap_check_subscribed=yes
set imap_idle=yes
set mail_check=60
