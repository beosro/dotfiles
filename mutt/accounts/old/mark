# Account Settings ------------------------------

set from      = "mark@zanshin.net"
set sendmail  = "/usr/bin/msmtp -a mark"

# Default inbox.
set spoolfile = "+mark/INBOX"

# Other special folders.
set mbox      = "+mark/Archive"
set postponed = "+mark/Drafts"
set record    = "+mark/Sent Messages"

color status yellow default
set my_acct   = "mark"

unmailboxes *
mailboxes =mark/INBOX =mark/Archive =mark/Drafts =mark/Sent\ Messages
